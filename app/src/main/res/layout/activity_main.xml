                android:textColor="#000000" />

            <TextView
                android:id="@+id/Atr8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FD7C7C"
                android:text="@string/Attr8"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Atr9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FD7C7C"
                android:text="@string/Attr9"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Atr10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FD7C7C"
                android:text="@string/Attr10"
                android:textColor="#000000" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>