        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="#FD7C7C"
        android:gravity="center"
        android:text="EXPLORE SINGAPORE"
        android:textSize="18sp" />

