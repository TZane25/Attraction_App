                android:textColor="#000000" />

            <TextView
                android:id="@+id/Atr4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FD7C7C"
                android:text="@string/Attr4"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Atr5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="#FD7C7C"
                android:text="@string/Attr5"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/Atr6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
